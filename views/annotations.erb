<form method="POST" action="/annotations">
<p>
<label for="dataset_select_id">Select a Dataset: </label>
<select class="ui dropdown" id='dataset_select_id' name='dataset_id' type='text'>
  <% dataset_list.each do |x| %>
    <option value="<%= x['id']%>"> <%= x['id'] %> </option>
  <% end %>
</select>
</p>
<p>
  <label for="mapping_download_url">Download URL of the new mapping: </label>
  <input type="text" name="mapping_download_url">
</p>

<p>
  <input class="ui fluid large teal submit secondary button" type="submit" name="Add" value="Go"/>

</p>

</form>

<hr>
<table class="ui celled table">
  <thead>
    <tr>
      <th>Dataset Id</th>
      <th>Request Annotation</th>
      <th>Add Annotation</th>
    </tr>
  </thead>
  <% dataset_list.each do |dataset| %>
  <tr>
    <td>
      <%= dataset['id'] %>
    </td>
    <td>
      <a href="requests?datasetid=<%= dataset['id'] %>">Request Annotation</a>

    </td>
    <td>
      Add Annotation
    </td>
  </tr>
<% end %>
</table>
