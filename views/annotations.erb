<form class="ui form" method="POST" action="annotations">

<div class="inline fields">
  <label for="dataset_select_id">Dataset Id: </label>
  <% if defined?(datasetid)  %>
    <input type="text" name="datasetid" value="<%= datasetid %>" placeholder="Dataset Id"/>
  <% else %>
    <input type="text" name="datasetid" placeholder="Enter the dataset ID"/>
  <% end %>
</div>

<div class="inline fields">
  <label for="request_id">Request Id: </label>
  <% if defined?(requestid)  %>
    <input type="text" name="requestid" value="<%= requestid %>" placeholder="Request Id"/>
  <% else %>
    <input type="text" name="requestid" placeholder="Request Id"/>
  <% end %>
</div>
<br>

<div class="grouped fields">
  <label for="mappingoption">Specify the annotations:</label>
  <div class="field">
    <div class="ui radio checkbox">
      <input type="radio" name="mappingoption" checked="" tabindex="0" class="hidden" value="byurl" >
      <label>URL</label>
    </div>
    <div class="inline fields">
      <input type="text" name="mapping_url" placeholder="Annotation URL"/>
    </div>
  </div>
  <div class="field">
    <div class="ui radio checkbox">
      <input type="radio" name="mappingoption" tabindex="0" class="hidden" value="byfile">
      <label>File</label>
    </div>
    <button class="ui button">
      Upload
    </button>
  </div>
  <div class="field">
    <div class="ui radio checkbox">
      <input type="radio" name="mappingoption" tabindex="0" class="hidden" value="byeditor">
      <label>Mapping Editor</label>
    </div>
    <a target="_blank" href="http://127.0.0.1:5000/editor?source=<%=source%>&callback=http://127.0.0.1:8080/upload?dataset_id=<%=datasetid%>">Open editor</a>
    <button class="ui button">
      Open Mapping Editor
    </button>
  </div>
  <div class="field">
    <div class="ui radio checkbox">
      <input type="radio" name="mappingoption" tabindex="0" class="hidden" value="bytada">
      <label>TADA</label>
    </div>
  </div>
</div>









<p>
  <input class="ui fluid large teal submit secondary button" type="submit" name="Add" value="Go"/>
</p>

</form>

<hr>
